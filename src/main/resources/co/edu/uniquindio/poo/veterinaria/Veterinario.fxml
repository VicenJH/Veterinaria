<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<VBox alignment="TOP_CENTER" prefHeight="600.0" prefWidth="900.0" spacing="24.0"
      style="-fx-background-color: linear-gradient(to bottom, #E8FFF4, #FFFFFF);"
      xmlns="http://javafx.com/javafx/23.0.1"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="co.edu.uniquindio.poo.veterinaria.ViewControllers.VeterinarioViewController">

    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <!-- Título -->
    <Text style="-fx-fill: #226B5A; -fx-font-weight: bold;" text="🐾 Panel del Veterinario">
        <font>
            <Font size="34.0"/>
        </font>
    </Text>

    <!-- =================== Sección Historial Clínico =================== -->
    <AnchorPane prefHeight="250.0" prefWidth="860.0"
                style="-fx-background-color: white; -fx-background-radius: 20; -fx-border-radius: 20;
                       -fx-border-color: #9BE7C4; -fx-border-width: 2;
                       -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.15), 10, 0, 0, 2);">
        <children>
            <VBox spacing="14.0" alignment="TOP_CENTER"
                  AnchorPane.topAnchor="14.0" AnchorPane.leftAnchor="14.0"
                  AnchorPane.rightAnchor="14.0" AnchorPane.bottomAnchor="14.0">

                <Label text="📋 Historial Clínico de Mascota"
                       style="-fx-text-fill: #2E7D6E; -fx-font-size: 18px; -fx-font-weight: bold;"/>

                <!-- Buscador -->
                <HBox alignment="CENTER" spacing="10">
                    <TextField fx:id="txtBuscarMascota" promptText="Ingrese nombre o ID de mascota"
                               style="-fx-background-radius: 20; -fx-border-radius: 20; -fx-border-color: #9BE7C4;"/>
                    <Button text="🔍 Buscar"
                            style="-fx-background-color: #1ABC9C; -fx-text-fill: white;
                                   -fx-background-radius: 20; -fx-border-radius: 20;"/>
                </HBox>

                <!-- Tabla de historial -->
                <TableView fx:id="tablaHistorial" prefHeight="150">
                    <columns>
                        <TableColumn fx:id="colFecha" text="Fecha" prefWidth="120"/>
                        <TableColumn fx:id="colDiagnostico" text="Diagnóstico" prefWidth="250"/>
                        <TableColumn fx:id="colTratamiento" text="Tratamiento" prefWidth="250"/>
                    </columns>
                </TableView>
            </VBox>
        </children>
    </AnchorPane>

    <!-- =================== Sección Citas =================== -->
    <AnchorPane prefHeight="250.0" prefWidth="860.0"
                style="-fx-background-color: white; -fx-background-radius: 20; -fx-border-radius: 20;
                       -fx-border-color: #9BE7C4; -fx-border-width: 2;
                       -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.15), 10, 0, 0, 2);">
        <children>
            <VBox spacing="14.0" alignment="TOP_CENTER"
                  AnchorPane.topAnchor="14.0" AnchorPane.leftAnchor="14.0"
                  AnchorPane.rightAnchor="14.0" AnchorPane.bottomAnchor="14.0">

                <Label text="📅 Citas Programadas"
                       style="-fx-text-fill: #2E7D6E; -fx-font-size: 18px; -fx-font-weight: bold;"/>

                <TableView fx:id="tablaCitas" prefHeight="180">
                    <columns>
                        <TableColumn fx:id="colMascota" text="Mascota" prefWidth="150"/>
                        <TableColumn fx:id="colPropietario" text="Propietario" prefWidth="150"/>
                        <TableColumn fx:id="colFechaCita" text="Fecha" prefWidth="120"/>
                        <TableColumn fx:id="colHoraCita" text="Hora" prefWidth="100"/>
                        <TableColumn fx:id="colMotivo" text="Motivo" prefWidth="200"/>
                    </columns>
                </TableView>
            </VBox>
        </children>
    </AnchorPane>

    <!-- Botón Volver -->
    <Button text="⬅ Volver"
            style="-fx-background-color: #E74C3C; -fx-text-fill: white;
                   -fx-background-radius: 28; -fx-border-radius: 28;
                   -fx-font-size: 15px; -fx-font-weight: bold;
                   -fx-padding: 8 20 8 20;"/>

</VBox>

