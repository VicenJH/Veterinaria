<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<VBox alignment="CENTER" prefHeight="600.0" prefWidth="900.0" spacing="20.0"
      style="-fx-background-color: linear-gradient(to bottom, #DFF7EE, #FFFFFF);"
      xmlns="http://javafx.com/javafx/23.0.1"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="co.edu.uniquindio.poo.veterinaria.ViewControllers.RegistrarPropietarioViewController">

    <padding>
        <Insets bottom="20" left="20" right="20" top="20" />
    </padding>

    <Text style="-fx-fill: #226B5A; -fx-font-weight: bold;"
          text="🐾 Registro de Propietarios 🐾">
        <font>
            <Font size="30.0" />
        </font>
    </Text>

    <AnchorPane prefHeight="250.0" prefWidth="850.0"
                style="-fx-background-color: white; -fx-background-radius: 20;
                       -fx-border-radius: 20; -fx-border-color: #9BE7C4; -fx-border-width: 2;
                       -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.15), 10, 0, 0, 3);">
        <children>
            <VBox alignment="CENTER_LEFT" spacing="12.0"
                  AnchorPane.bottomAnchor="20.0"
                  AnchorPane.leftAnchor="30.0"
                  AnchorPane.rightAnchor="30.0"
                  AnchorPane.topAnchor="20.0">

                <HBox spacing="15.0">
                    <VBox spacing="4.0">
                        <Label text="ID:" style="-fx-font-weight: bold; -fx-text-fill: #2E7D6E;" />
                        <TextField fx:id="txtId" promptText="Ingrese ID"
                                   style="-fx-background-radius: 10; -fx-border-radius: 10;" />
                    </VBox>
                    <VBox spacing="4.0">
                        <Label text="Nombre:" style="-fx-font-weight: bold; -fx-text-fill: #2E7D6E;" />
                        <TextField fx:id="txtNombre" promptText="Ingrese nombre"
                                   style="-fx-background-radius: 10; -fx-border-radius: 10;" />
                    </VBox>
                </HBox>

                <HBox spacing="15.0">
                    <VBox spacing="4.0">
                        <Label text="Apellido:" style="-fx-font-weight: bold; -fx-text-fill: #2E7D6E;" />
                        <TextField fx:id="txtApellido" promptText="Ingrese apellido"
                                   style="-fx-background-radius: 10; -fx-border-radius: 10;" />
                    </VBox>
                    <VBox spacing="4.0">
                        <Label text="Teléfono:" style="-fx-font-weight: bold; -fx-text-fill: #2E7D6E;" />
                        <TextField fx:id="txtTelefono" promptText="Ingrese teléfono"
                                   style="-fx-background-radius: 10; -fx-border-radius: 10;" />
                    </VBox>
                </HBox>

                <VBox spacing="4.0">
                    <Label text="Dirección:" style="-fx-font-weight: bold; -fx-text-fill: #2E7D6E;" />
                    <TextField fx:id="txtDireccion" promptText="Ingrese dirección"
                               style="-fx-background-radius: 10; -fx-border-radius: 10;" />
                </VBox>

                <HBox alignment="CENTER" spacing="15.0" style="-fx-padding: 10 0 0 0;">
                    <Button text="💾 Registrar" fx:id="btnRegistrar"
                            style="-fx-background-color: #2ECC71; -fx-text-fill: white;
                                   -fx-font-size: 14px; -fx-font-weight: bold;
                                   -fx-background-radius: 28; -fx-border-radius: 28;
                                   -fx-padding: 8 20 8 20;" />
                    <Button text="🔄 Limpiar" fx:id="btnLimpiar"
                            style="-fx-background-color: #1ABC9C; -fx-text-fill: white;
                                   -fx-font-size: 14px; -fx-font-weight: bold;
                                   -fx-background-radius: 28; -fx-border-radius: 28;
                                   -fx-padding: 8 20 8 20;" />
                </HBox>
            </VBox>
        </children>
    </AnchorPane>

    <AnchorPane prefHeight="250.0" prefWidth="850.0"
                style="-fx-background-color: white; -fx-background-radius: 20;
                       -fx-border-radius: 20; -fx-border-color: #9BE7C4; -fx-border-width: 2;
                       -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.15), 10, 0, 0, 3);">
        <children>
            <TableView fx:id="tablaPropietarios"
                       AnchorPane.topAnchor="20.0"
                       AnchorPane.leftAnchor="20.0"
                       AnchorPane.rightAnchor="20.0"
                       AnchorPane.bottomAnchor="20.0">
                <columns>
                    <TableColumn fx:id="colId" text="ID" prefWidth="80.0" />
                    <TableColumn fx:id="colNombre" text="Nombre" prefWidth="150.0" />
                    <TableColumn fx:id="colApellido" text="Apellido" prefWidth="150.0" />
                    <TableColumn fx:id="colTelefono" text="Teléfono" prefWidth="150.0" />
                    <TableColumn fx:id="colDireccion" text="Dirección" prefWidth="250.0" />
                </columns>
            </TableView>
        </children>
    </AnchorPane>

    <Button text="🚪 Salir" fx:id="btnSalir"
            style="-fx-background-color: #E74C3C; -fx-text-fill: white;
                   -fx-font-size: 14px; -fx-font-weight: bold;
                   -fx-background-radius: 28; -fx-border-radius: 28;
                   -fx-padding: 8 20 8 20;" />

</VBox>
